{
    "name": "my-weather-app",
    "productName": "my-weather-app",
    "version": "1.0.0",
    "description": "My Electron application description",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint src --color"
    },
    "keywords": [],
    "author": "Gelgamesh",
    "license": "MIT",
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "npm"
            },
            "electronWinstallerConfig": {
                "name": "my_weather_app"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "",
                "name": ""
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "myweatherapp"
            }
        }
    },
    "dependencies": {
        "electron-compile": "^6.4.4",
        "electron-reload": "^1.5.0",
        "electron-squirrel-startup": "^1.0.0"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "electron-forge": "^5.2.4",
        "electron-prebuilt-compile": "8.2.0",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^5.1.1",
        "eslint-plugin-react": "^7.24.0"
    },
    "build": {
        "appId": "com.my-weatherapp.my-weatherapp",
        "productName": "MyWeatherApp",
        "copyright": "Copyright Â© 2021 ${author}",
        "mac": {
            "icon": "./assets/img/weather.icns",
            "category": "assets.app-category.utilities"
        },
        "win": {
            "icon": "./assets/img/weather.png"
        },
        "files": [
            "./build/**/*",
            "./dist/**/*",
            "./node_modules/**/*",
            "./assets/**/*",
            "*.js"
        ],
        "directories": {
            "buildResources": "assets"
        }
    }
}